<header class="relative flex items-center justify-center text-center h-72 text-white py-8">
    
    <!-- Background Image (if provided) -->
    <% if (heroImage) { %>
        <div class="absolute inset-0 bg-cover bg-center" style="background-image: url('<%= heroImage %>'); opacity: 0.95;"></div>
    <% } %>

    <!-- Gradient Overlay (Always Present) -->
    <div class="absolute inset-0 bg-gradient-to-r from-primary to-secondary opacity-80"></div>

    <!-- Content -->
    <div class="relative z-10 px-6 max-w-4xl mx-auto">
        <h1 class="text-3xl md:text-4xl font-extrabold leading-tight">
            <%= heroTitle.replace(" - CKC", "") %>
        </h1>
        <% if (heroSubtitle) { %>
            <p class="text-md md:text-lg mt-2 font-light">
                <%= heroSubtitle %>
            </p>
        <% } %>

        <!-- Dynamic Buttons -->
        <% if (heroButtons && heroButtons.length > 0) { %>
            <div class="mt-4 flex justify-center space-x-4">
                <% heroButtons.forEach((button, index) => { %>
                    <a href="<%= button.link %>" 
                       class="px-6 py-2 font-bold rounded-full shadow-lg transition 
                              <%= index % 2 === 0 ? 'bg-accent text-primary hover:bg-light' : 'border border-white text-white hover:bg-white hover:text-primary' %>">
                        <%= button.text %>
                    </a>
                <% }) %>
            </div>
        <% } %>
    </div>
</header>
